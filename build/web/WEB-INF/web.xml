    </servlet>
    <servlet>
        <servlet-name>createEmpresa</servlet-name>
        <servlet-class>com.api.nexoto.services.createEmpresa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getViajesSocio</servlet-name>
        <servlet-class>com.api.nexoto.services.getViajesSocio</servlet-class>
        <init-param>
            <param-name>idSocio</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>acceptViajeChofer</servlet-name>
        <servlet-class>com.api.nexoto.services.acceptViajeChofer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getDireccionEmpresa</servlet-name>
        <url-pattern>/getDireccionEmpresa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuarioViajeSave</servlet-name>
        <url-pattern>/usuarioViajeSave</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>saveDataUserDir</servlet-name>
        <url-pattern>/saveDataUserDir</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createViaje</servlet-name>
        <url-pattern>/createViaje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cambiaStatusViaje</servlet-name>
        <url-pattern>/cambiaStatusViaje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateViajeStatus</servlet-name>
        <url-pattern>/UpdateViajeStatus</url-pattern>
    </servlet-mapping>
