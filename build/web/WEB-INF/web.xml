        <servlet-name>createEmpresa</servlet-name>
        <url-pattern>/createEmpresa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getViajesSocio</servlet-name>
        <url-pattern>/getViajesSocio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>acceptViajeChofer</servlet-name>
        <url-pattern>/acceptViajeChofer</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            4000
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>
</web-app>
